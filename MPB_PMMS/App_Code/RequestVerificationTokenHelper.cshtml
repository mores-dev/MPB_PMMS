@functions{
    /// <summary>
    /// 修正CHECKMARX AJAX傳值 CSRF問題
    /// </summary>
    /// <returns></returns>
    public static string TokenValue()
    {
        string cookieToken;
        string formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}
